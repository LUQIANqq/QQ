<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/my_number"
            android:layout_width="42dp"
            android:layout_height="37dp"
            android:id="@+id/tv_name" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="54dp"
            android:layout_marginTop="38dp" app:layout_constraintTop_toBottomOf="@+id/iv_head"/>
    <Button
            android:text="@string/login"
            android:layout_width="133dp"
            android:layout_height="64dp"
            android:id="@+id/btn_login" android:background="#00BCD4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="137dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="127dp"
            android:layout_marginTop="67dp" app:layout_constraintTop_toBottomOf="@+id/et_password"/>
    <ImageView
            android:layout_width="410dp"
            android:layout_height="349dp" app:srcCompat="@drawable/splash"
            android:id="@+id/iv_head"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:hint="请输入密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password"
            android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_head" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="168dp"/>
    <TextView
            android:text="@string/my_password"
            android:layout_width="45dp"
            android:layout_height="33dp"
            android:id="@+id/tv_psw" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:textSize="18sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_number" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_head" app:layout_constraintStart_toEndOf="@+id/tv_name"
            android:layout_marginStart="74dp" android:hint="请输入QQ号"/>
    <CheckBox
            android:text="忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_remember" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_psw" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>